<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TableView?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="software.fullstack.jfileexplorer.MainController"
            fx:id="root">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <top>
        <HBox>
            <Button text="New" onAction="#createNewFile"/>
        </HBox>
    </top>
    <left>
        <TreeView fx:id="directoryOverview">
            <TreeItem value="Home">
                <children>
                    <TreeItem value="Sample File">
                    </TreeItem>
                    <TreeItem value="Sample File 2">
                    </TreeItem>
                    <TreeItem value="Sample Folder">
                        <children>
                            <TreeItem value="Sample Nested File"></TreeItem>
                        </children>
                    </TreeItem>
                </children>
            </TreeItem>
        </TreeView>
    </left>

    <center>
    </center>
    <right>
    </right>
</BorderPane>
